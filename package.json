{
  "name": "school-run",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "prepare": "husky install",
    "pre-commit:lint": "pnpm lint-staged",
    "migrate:apply": "supabase db reset --use-migra --db-url \"$SUPABASE_DB_URL\"",
    "functions:deploy": "supabase functions deploy --project-ref \"$SUPABASE_PROJECT_REF\" --no-verify-jwt false"
  },
  "devDependencies": {
    "turbo": "^2.2.4",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.7",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "eslint": "^9.11.1",
    "dotenv-cli": "^7.4.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": ["eslint --fix", "prettier --write"],
    "*.{json,md,yml,yaml}": ["prettier --write"]
  }
}
